import testing ;

project boost/atomic/test
    : requirements
      <library>../../thread/build//boost_thread
      <library>/boost/atomic//boost_atomic
      <link>static
    ;

test-suite atomic
    : [ run native_api.cpp ]
      [ run fallback_api.cpp ]
      [ run atomicity.cpp ]
      [ run ordering.cpp ]
      [ run lockfree.cpp ]
    ;
